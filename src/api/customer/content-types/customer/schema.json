{
  "kind": "collectionType",
  "collectionName": "customers",
  "info": {
    "singularName": "customer",
    "pluralName": "customers",
    "displayName": "Customer",
    "description": "Customer information for appointments and services"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "firstName": {
      "type": "string",
      "required": true
    },
    "lastName": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "email",
      "required": true,
      "unique": true
    },
    "phone": {
      "type": "string"
    },
    "dateOfBirth": {
      "type": "date"
    },
    "timezone": {
      "type": "string",
      "default": "UTC"
    },
    "address": {
      "type": "component",
      "component": "common.address",
      "required": false
    },
    "notes": {
      "type": "text"
    },
    "tags": {
      "type": "component",
      "repeatable": true,
      "component": "common.tag"
    },
    "preferences": {
      "type": "json"
    },
    "communicationPreferences": {
      "type": "json"
    },
    "emergencyContact": {
      "type": "json"
    },
    "user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },
    "store": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::store.store"
    },
    "appointments": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::appointment.appointment",
      "mappedBy": "customer"
    },
    "totalSpent": {
      "type": "decimal",
      "default": 0
    },
    "totalSessions": {
      "type": "integer",
      "default": 0
    },
    "lastSessionDate": {
      "type": "datetime"
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "source": {
      "type": "enumeration",
      "enum": ["website", "referral", "social_media", "manual", "other"],
      "default": "website"
    },
    "referredBy": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::customer.customer"
    }
  }
}
