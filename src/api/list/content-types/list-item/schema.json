{
  "kind": "collectionType",
  "collectionName": "list_items",
  "info": {
    "singularName": "list-item",
    "pluralName": "list-items",
    "displayName": "List Item",
    "description": "Items that can be added to lists"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "slug": {
      "type": "string",
      "targetField": "title",
      "required": true
    },
    "bio": {
      "type": "richtext",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "media": {
      "type": "media",
      "multiple": true,
      "allowedTypes": ["images", "files", "videos"],
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "URLS": {
      "type": "component",
      "repeatable": true,
      "component": "common.urls",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "SEO": {
      "type": "component",
      "repeatable": false,
      "component": "common.seo",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "lists": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::list.list",
      "inversedBy": "items"
    }
  }
}
