{
  "kind": "collectionType",
  "collectionName": "collection_items",
  "info": {
    "singularName": "collection-item",
    "pluralName": "collection-items",
    "displayName": "Collection Item",
    "description": "Items that can be added to collections"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "bio": {
      "type": "richtext",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "media": {
      "type": "media",
      "multiple": true,
      "allowedTypes": ["images", "files", "videos"],
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "URLS": {
      "type": "component",
      "repeatable": true,
      "component": "common.urls",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "SEO": {
      "type": "component",
      "repeatable": false,
      "component": "common.seo",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "collections": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::collection.collection",
      "mappedBy": "items"
    }
  }
}
